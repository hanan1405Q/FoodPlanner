<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <!-- Image for "Connection Lost" -->
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="150dp"
        android:layout_height="150dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        android:contentDescription="@string/connection_lost_image"
        app:srcCompat="@drawable/connection_lost"
        android:layout_marginBottom="16dp"/>

    <!-- Text informing the user to check their connection -->
    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="125dp"
        android:layout_marginTop="16dp"
        android:fontFamily="@font/alkatra_medium"
        android:text="@string/checkConnection"
        android:textColor="@color/titleColor"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imageView2"
        tools:text="Check your connection,
         but You can still access your planned meals and favorite meals." />
</androidx.constraintlayout.widget.ConstraintLayout>
