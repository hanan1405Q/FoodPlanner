<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed state -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/babyPink"/> <!-- Filled pink color when pressed -->
            <corners android:radius="50dp"/> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Default outlined state -->
    <item>
        <shape android:shape="rectangle">
            <stroke android:width="2dp" android:color="@color/babyPink"/> <!-- Outline in pink -->
            <solid android:color="@android:color/transparent"/> <!-- Transparent background -->
            <corners android:radius="50dp"/>
        </shape>
    </item>
</selector>
